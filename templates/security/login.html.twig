{% extends 'base.html.twig' %}


{% block body %}

<div class="container mx-auto">

<form action="{{ path('app_login') }}" method="post" class="mt-5 flex flex-col">
<input type="text" name="_username" value="{{lastpseudo}}" placeholder="Votre email" class="mb-5">
<input type="password" name="_password" placeholder="Votre mot de passe" class="mb-5">
<div class="flex justify-center">
<button type="submit" class="w-[30%] text-white bg-[#facd5f] rounded-xl">Connexion</button>
</div>
</form>

<p class="text-center pt-[6%]">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="text-xl underline font-semibold">Inscrivez-vous!</p></a>

</div>

{% endblock %}
