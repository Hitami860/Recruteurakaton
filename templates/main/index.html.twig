{% extends 'base.html.twig' %}

{% block title %}Recruteur
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="flex justify-center">
		<header class="bg-center bg-no-repeat md:bg-no-repeat bg-cover py-36 w-[60%]" style="background-image:url('{{asset('image/bg-bureau.jpg')}}')"></header>
	</div>

	<h1 class="text-center text-xl font-semibold pt-[4%]">Offres d'emploi ({{ annonces | length }})</h1>

    <div class=" border-t-2 pb-[3%] pt-[3%]">

{% for annonce in annonces %}
<a href="{{path('app_annonce', {id: annonce.id})}}" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{annonce.titre}}</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{annonce.contenu}}</p>
		<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{annonce.auteur}}</p>
		<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{annonce.lieu}}</p>
		<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{annonce.type}}</p>
    </div>
</a>
{% endfor %}

</div>

{% endblock %}
