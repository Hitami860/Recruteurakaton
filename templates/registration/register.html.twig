{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="w-[30%] mx-auto mt-5">
    <h1 class="font-semibold text-xl text-center">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="mb-5">
        {{ form_row(registrationForm.email) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.nom) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.prenom) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.statut) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.roles) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.entreprise) }}
        </div>
        <div class="mb-5">
        {{ form_row(registrationForm.cv) }}
        </div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </section>
{% endblock %}
